@using SergeiLevin0.ViewModels
@model SergeiLevin0.ViewModels.EmployeeView

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeDatails @Model.Id @Model.SecondName</title>
</head>
<body>
    <h3>@ViewBag.Title</h3>
    <h4>@ViewData["Description"]</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SecondName</th>
                <th>Age</th>
                <th>Должность</th>
                <th>Права</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.FirstName</td>
                <td>@Model.SecondName</td>
                <td>@Model.Age</td>
                <td>@Model.Position</td>
                <td>@Model.Role</td>
            </tr>
        </tbody>
    </table>
    <p><a asp-controller="Employees" asp-action="Index">Return to list of empoyees!</a></p>
</body>
</html>
