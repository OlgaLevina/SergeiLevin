@using SergeiLevin0.ViewModels
@model IEnumerable<SergeiLevin0.ViewModels.EmployeeView>
@{ViewBag.Title = "Сотрудники";}

<h3>@ViewBag.Title</h3>
<table class="table">
    <thead>
        <tr>
            <th>Choose</th>
            <th>Id</th>
            <th>Name</th>
            <th>SecondName</th>
            <th>Age</th>
            <th>Детали</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" value="@employee.Id" />
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="DetailsName" asp-route-firstName="@employee.FirstName" asp-route-lastName="@employee.SecondName">@employee.Id</a>
                </td>
                <td><input type="text" value="@employee.FirstName" /></td>
                <td><input type="text" value="@employee.SecondName" /></td>
                <td><input type="text" value="@employee.Age" /></td>
                <td><a asp-controller="Employees" asp-action="EmployeeDatails" asp-route-id="@employee.Id">About employee @employee.Id</a></td>
                <td><a asp-action="Edit" asp-route-id="@employee.Id"><i class="fa fa-user-edit"></i>Edit</a></td><!--проблемы с шрифтовой иконкой-->
            </tr>
        }
    </tbody>

</table>
<input type="submit" value="Delete" />
<input type="submit" value="Save" />
