@model SergeiLevin0.ViewModels.Idntity.LoginViewModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Вход в систему";
}


<section id="form">
    <!--form-->
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" method="post">
                        <!--автоматизация процесса контроля, чтобы никто не мог подменить учетные данные и зарегистрироваться вместо кого-то. Браузер хранит тоукен, который отслеживается на сервере, если тоукены разойдутся, то форма будет отклонена -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(model => model.ReturnUrl)
                        <div class="form-group">
                            <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span>
                                <input asp-for="RememberMe" type="checkbox" class="checkbox">
                                Запомнить меня
                            </span>
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
