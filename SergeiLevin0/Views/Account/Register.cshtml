@model SergeiLevin0.ViewModels.Idntity.RegisterUserViewModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Регистрация нового пользователя";
}

<section id="form">
    <!--form-->
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Добро пожаловать!</h2>
                    <form asp-controller="Account" asp-action="Register" asp-antiforgery="true">
                        <!--автоматизация процесса контроля, чтобы никто не мог подменить учетные данные и зарегистрироваться вместо кого-то. Браузер хранит тоукен, который отслеживается на сервере, если тоукены разойдутся, то форма будет отклонена -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" ></label>
                            <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <!--input type="email" placeholder="Email Address" /-->
                        <div class="form-group">
                            <label asp-for="Password" ></label>
                            <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" ></label>
                            <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

@section Scripts
    {
    <partial name="Partial/_ValidationScriptsPartial" />
}
