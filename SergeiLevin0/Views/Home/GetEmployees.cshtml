@using SergeiLevin0.ViewModels
@model IEnumerable<SergeiLevin0.ViewModels.EmployeeView>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEmployees</title>
</head>
<body>
    <h3>@ViewBag.Title</h3>
    <h4>@ViewData["Description"]</h4>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SecondName</th>
                <th>Age</th>
                <th>Детали</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.SecondName</td>
                    <td>@employee.Age</td>
                    <td><a asp-controller="Home" asp-action="EmployeeDatails" asp-route-id="@employee.Id">About employee @employee.Id</a></td>
                </tr>
            }
        </tbody>

    </table>

</body>
</html>
