@model CatalogViewModel
@{
    //Layout = "_BradCrumbsLayout";
    Layout = "_Layout";
    ViewBag.Title = "Shop";
}
<vc:bread-crumbs />
<partial name="Partial/_Advertisement" />
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_FeaturesItem" model="@Model.Products" />
                </div>
                <div>
                    <paging page-model="@Model.PageViewModel"
                            page-action="Shop"
                            page-url-CategoryId="@Model.CategoryId"
                            page-url-BrandId="@Model.BrandId">
                    </paging>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    <script src="~/lib/jquery-loading-overlay/loadingoverlay.min.js"></script>
    <script src="~/js/Shop/ProductItems.js" asp-append-version="true"></script>
    <script>
        $(function() {
            ProductItems.init({
                getUrl: "@Url.Action("GetFilteredItems", "Catalog")"
            });
        })
    </script>
}

